datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator db {
  provider             = "prisma-client-py"
  interface            = "asyncio"
  recursive_type_depth = 5
}

model Product {
  id              String    @id @default(uuid())
  productName     String
  companyName     String
  carbonFootprint Float
  price           Float
  imageUrl        String
  category        String
  description     String
  suggestions     Product[] @relation("ProductSuggestions")
  suggestedBy     Product[] @relation("ProductSuggestions")
  carts           Cart[]    @relation("CartProducts")
}

model User {
  id        String   @id @default(uuid())
  username  String
  email     String   @unique
  cart      Cart[]
  createdAt DateTime @default(now())

  @@index([email], name: "User_email_idx")
  @@map("User")
}

model Cart {
  id       String    @id @default(uuid())
  userId   String
  user     User      @relation(fields: [userId], references: [id])
  products Product[] @relation("CartProducts")
}

model Test {
  id        String   @id @default(uuid())
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([name], name: "Test_name_idx")
  @@map("Test")
}
